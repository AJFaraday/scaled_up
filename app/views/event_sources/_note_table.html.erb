<h2><%= Note.model_name.human(count: 2) %></h2>

<%= render partial: 'shared/bar_chart', 
           locals: {
             data: @event_source.note_names_bar_data,
             name: 'note_bar_chart'
           } %>

<table class='table'>
  <thead>
    <tr>
      <th><%= EventSourceNoteStat.human_attribute_name(:name) %></th>
      <th><%= EventSourceNoteStat.human_attribute_name(:cnt) %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_source.note_name_stats.sort_by{|k,v|v}.reverse.each do |note_stat| %>
      <tr>
        <td><%= note_stat[0] %></td>
        <td><%= note_stat[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
