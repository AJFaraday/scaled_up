<%= render partial: 'scales/selecter' %>

<h1><%= EventProfile.model_name.human(count: 2) %></h1>

<table class='table'>
  <thead>
    <tr>
      <th><%= EventProfile.human_attribute_name(:active) %></th>
      <th><%= EventProfile.human_attribute_name(:name) %></th>
      <th><%= EventProfile.human_attribute_name(:notes_summary) %></th>
      <th><%= EventProfile.human_attribute_name(:samples_summary) %></th>
      <th><%= EventProfile.human_attribute_name(:port) %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_profiles.each do |event_profile| %>
      <tr>
        <td>
          <%= check_box_tag(
                "event_profile_#{event_profile.id}",
                event_profile.id,
                event_profile.active,
                class: 'event_profile_check'
              )%>
          <span id="profile_<%= event_profile.id %>_active">
            <%= event_profile.active %>
          </span>
        </td>
        <td><%= event_profile.name %></td>
        <td><%= event_profile.notes_summary %></td>
        <td><%= event_profile.samples_summary %></td>
        <td><%= event_profile.ip_address %>:<%= event_profile.port %></td>
      </tr>
    <% end %>
  </tbody>
</table>
