<h2><%= SampleStat.model_name.human(count: 2) %></h2>

<div class='text-center'>
  <div class='massive_stat'>
    <%= @sample_count %>
  </div>
  samples have been played.
</div>

<%= render( 
      partial: 'shared/bar_chart',
      locals: {
        name: "sample_names_chart",
        data: SampleStat.bar_data
      } 
    ) 
%>



<table class='table'>
  <thead>
    <tr>
      <th><%= SampleStat.human_attribute_name(:name) %></th>
      <th><%= SampleStat.human_attribute_name(:cnt) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sample_stats.each do |stat| %>
      <tr>
        <td><%= stat.name %></td>
        <td><%= stat.cnt %></td>
      </tr>
    <% end %>
  </tbody>
</table>
